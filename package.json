{
  "name": "nodejs-starter-typescript",
  "version": "1.0.0",
  "description": "A simple TypeScript NodeJS Starter",
  "main": "src/index.ts",
  "scripts": {
    "dev": "npm run lint && nodemon -e ts -w src --ignore 'src/**/*.spec.ts' --exec npm run start-dev-server",
    "start-dev-server": "ts-node src",
    "lint": "tslint -p ./ --fix",
    "start": "node server",
    "build": "npm run lint && tsc"
  },
  "author": {
    "name": "Gabriel Marote",
    "email": "gamarote@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gamarote/NodeJS-Starter-TypeScript.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "nodemon": "^1.17.3",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3"
  }
}
